<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <import type="android.view.View"/>
    <variable
        name="model"
        type="com.motman_doctor.models.ApointmentModel.Data" />
</data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginBottom="8dp"
        >

        <LinearLayout
            android:id="@+id/llData"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/small_rounded_color2"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@{model.time}"
                android:textColor="@color/color1"
                android:textSize="15sp"

                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvdetials"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@{model.patient_name}"
                android:textColor="@color/black"
                android:textSize="15sp"

                />
            <ImageView
                android:id="@+id/image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src='@{model.reservation_type.equals("normal")?@drawable/ic_phone:@drawable/ic_video_camera}'
                app:tint="@color/gray9"
                android:padding="3dp"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:layout_gravity="center_vertical"

                android:clickable='@{model.reservation_status.equals("open")?true:false}'
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>